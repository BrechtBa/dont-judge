rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /contests/{contestId}/scores/{scoreId} {
    	allow write: if request.auth != null && get(/databases/$(database)/documents/contests/$(contestId)/judgeKeys/$(request.resource.data.judgeId)).data.uid == request.auth.uid;
      allow read: if request.auth != null && get(/databases/$(database)/documents/contests/$(contestId)/judgeKeys/$(resource.data.judgeId)).data.uid == request.auth.uid;
    }
    
    match /contests/{contestId}/judgeKeys/{judgeId} {
    	allow read: if request.auth != null && resource.data.uid == request.auth.uid;
      allow write: if request.auth != null && (resource== null || resource.data == null) && request.resource.data.uid == request.auth.uid;
    }
    match /contests/{contestId}/judges/{judgeId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/contests/$(contestId)/judgeKeys/$(judgeId)).data.uid  == request.auth.uid;
    }
    match /contests/{contestId} {
    	allow read: if request.auth != null;
    }
    match /contests/{contestId}/participants/{participantId} {
    	allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /contests/{contestId}/{document=**} {
    	allow read, write: if request.auth != null && ((resource == null || resource.data == null) || (get(/databases/$(database)/documents/contests/$(contestId)/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/contests/$(contestId)/users/$(request.auth.uid)).data.admin == true));
    }

    match /users/{uid} {
    	allow read: if request.auth != null && uid == request.auth.uid;
      allow write: if request.auth != null && uid == request.auth.uid && (resource == null || resource.data == null);
    }
  }
}